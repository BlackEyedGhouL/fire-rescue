<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cm_success_alert_box"
    android:background="@color/white"
    android:layout_gravity="center"
    app:cardCornerRadius="10dp"
    app:cardElevation="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            android:id="@+id/cm_green_dash"
            android:layout_width="10dp"
            android:layout_height="0dp"
            android:background="@color/dark_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/cm_ok"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/cm_green_dash"
            app:layout_constraintStart_toEndOf="@+id/cm_green_dash"
            app:layout_constraintTop_toTopOf="@+id/cm_green_dash"
            android:background="@drawable/ok"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/ew_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/product_sans_bold"
            android:text="@string/cm_success"
            android:textAlignment="center"
            android:textColor="@color/dark_black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/cm_ok"
            app:layout_constraintStart_toEndOf="@+id/cm_ok"
            app:layout_constraintTop_toTopOf="@+id/cm_ok" />

        <TextView
            android:id="@+id/ew_event_starting_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/product_sans_regular"
            android:text="@string/cm_commendation_submitted"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/cm_ok"
            app:layout_constraintStart_toEndOf="@+id/cm_ok"
            app:layout_constraintTop_toBottomOf="@+id/ew_event_name" />

        <LinearLayout
            android:id="@+id/cm_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="34dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/gray_close"
                tools:ignore="ContentDescription" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>